@{
    Layout = null;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">BattleBits: {{ competition.name }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3" ng-repeat="number in game.numbers track by $index">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3 class="text-center">{{ number | hex }}</h3>
                </div>
            </div>
        </div>
    </div>
</div>