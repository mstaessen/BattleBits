@{
    Layout = null;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-md-push-3">
            <div class="row">
                <div class="col-sm-6 text-left">
                    Score: {{numbersGuessed}} / {{numbersToGuess}}
                </div>
                <div class="col-sm-6 text-right">
                    Time Left: {{timeLeft}}s
                </div>
            </div>
            <div class="row">
                <div class="panel panel-default text-center">
                    <div class="panel-body">
                        <p class="challenge">
                            {{ number | hex }} = <span class="label label-default">{{ guess | binary:8 }}</span>
                        </p>

                        <ul class="bits">
                            <li ng-class="{active: isBitActive(7)}" ng-click="toggleBit(7)">128</li>
                            <li ng-class="{active: isBitActive(6)}" ng-click="toggleBit(6)">64</li>
                            <li ng-class="{active: isBitActive(5)}" ng-click="toggleBit(5)">32</li>
                            <li ng-class="{active: isBitActive(4)}" ng-click="toggleBit(4)">16</li>
                            <li ng-class="{active: isBitActive(3)}" ng-click="toggleBit(3)">8</li>
                            <li ng-class="{active: isBitActive(2)}" ng-click="toggleBit(2)">4</li>
                            <li ng-class="{active: isBitActive(1)}" ng-click="toggleBit(1)">2</li>
                            <li ng-class="{active: isBitActive(0)}" ng-click="toggleBit(0)">1</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

